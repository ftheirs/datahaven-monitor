{
	"name": "datahaven-monitor",
	"version": "0.1.0",
	"private": true,
	"description": "Testnet Sentinel: sanity and stress monitoring suite for StorageHub Testnet.",
	"scripts": {
		"build": "bunx tsc -p tsconfig.json",
		"check": "bunx tsc -p tsconfig.json --noEmit",
		"sanity": "bun run src/sanity/index.ts",
		"sanity:full": "bun run src/sanity/index.ts",
		"sanity:connection": "SANITY_TARGET=connection bun run src/sanity/index.ts",
		"sanity:health": "SANITY_TARGET=health bun run src/sanity/index.ts",
		"sanity:siwe": "SANITY_TARGET=siwe bun run src/sanity/index.ts",
		"sanity:upload": "SANITY_TARGET=upload bun run src/sanity/index.ts",
		"sanity:download": "SANITY_TARGET=download bun run src/sanity/index.ts",
		"sanity:delete": "SANITY_TARGET=delete bun run src/sanity/index.ts",
		"sanity:dev": "bun run src/sanity/index.ts",
		"lint": "bunx @biomejs/biome check .",
		"lint:fix": "bunx @biomejs/biome check . --write",
		"fmt": "bunx @biomejs/biome format .",
		"fmt:fix": "bunx @biomejs/biome format . --write"
	},
	"dependencies": {
		"@storagehub-sdk/core": "0.3.3",
		"@storagehub-sdk/msp-client": "0.3.3",
		"viem": "2.41.2"
	},
	"devDependencies": {
		"@biomejs/biome": "latest",
		"@types/node": "^22.0.0",
		"typescript": "^5.6.0"
	}
}
