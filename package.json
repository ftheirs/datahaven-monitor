{
	"name": "datahaven-monitor",
	"version": "0.1.0",
	"private": true,
	"description": "Testnet Sentinel: sanity and stress monitoring suite for StorageHub Testnet.",
	"scripts": {
		"build": "bunx tsc -p tsconfig.json",
		"check": "bunx tsc -p tsconfig.json --noEmit",
		"demo": "bun run scripts/storagehub-stagenet-demo.ts",
		"end2end": "bun run scripts/storagehub-stagenet-end2end.ts",
		"monitor": "bun run src/monitor/index.ts",
		"monitor-heavy": "bun run src/monitor-heavy/index.ts",
		"cleanup": "bun run src/tools/cleanup.ts",
		"stress:upload": "bun run src/stress/fileUploadStress.ts",
		"lint": "bunx @biomejs/biome check .",
		"lint:fix": "bunx @biomejs/biome check . --write",
		"fmt": "bunx @biomejs/biome format .",
		"fmt:fix": "bunx @biomejs/biome format . --write"
	},
	"dependencies": {
		"@polkadot/api": "16.5.4",
		"@polkadot/types": "16.5.4",
		"@polkadot/util": "14.0.1",
		"@polkadot/util-crypto": "14.0.1",
		"@storagehub-sdk/core": "0.4.4",
		"@storagehub-sdk/msp-client": "0.4.4",
		"@storagehub/api-augment": "^0.2.11",
		"@storagehub/types-bundle": "latest",
		"viem": "2.41.2"
	},
	"overrides": {
		"@polkadot/api": "16.5.4",
		"@polkadot/api-augment": "16.5.4",
		"@polkadot/api-base": "16.5.4",
		"@polkadot/api-derive": "16.5.4",
		"@polkadot/keyring": "14.0.1",
		"@polkadot/rpc-augment": "16.5.4",
		"@polkadot/rpc-core": "16.5.4",
		"@polkadot/rpc-provider": "16.5.4",
		"@polkadot/types": "16.5.4",
		"@polkadot/types-augment": "16.5.4",
		"@polkadot/types-codec": "16.5.4",
		"@polkadot/types-create": "16.5.4",
		"@polkadot/types-known": "16.5.4",
		"@polkadot/types-support": "16.5.4",
		"@polkadot/util": "14.0.1",
		"@polkadot/util-crypto": "14.0.1"
	},
	"devDependencies": {
		"@biomejs/biome": "latest",
		"@types/node": "^22.0.0",
		"typescript": "^5.6.0"
	}
}
